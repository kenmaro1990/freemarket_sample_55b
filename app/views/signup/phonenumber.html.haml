.header
  .header__image--mercari
    = link_to image_tag('/logo.svg'), root_path
  %ol.progress-bar
    %li.is-active
      %span 会員情報
    %li.is-active.is-active__last
      %span 電話番号認証
    %li
      %span  お届け先住所入力
    %li
      %span 支払い方法
    %li
      %span 完了

.step2-main
  .register-text  電話番号の確認
  .register-phonenumber
    = form_for @user, url: address_signup_index_path, method: :get, html: {class: 'register-phonenumber__box'} do |f|
      = f.text_field :phone_number, placeholder: '携帯電話の番号を入力', class: "register-profile__kana-nameform--textarea"
      = link_to "SMSを送信する", address_signup_index_path, class: "register-phonenumber__nextpage"
      .register-phonenumber__description ※電話番号は本人確認や不正利用防止のために利用します。他のユーザーに公開されることはありません。
      = link_to address_signup_index_path, class: "register-phonenumber__reason",method: :get do
        電話番号の確認が必要な理由
        %i.fa.fa-arrow-right
= render "login-footer"
