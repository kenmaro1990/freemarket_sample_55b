.header
  .header__image--mercari
    = image_tag('/logo.svg')
.main
  .login
    .login-new
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", register_signup_index_path, class: "login-new__account"
    .login-social
      .login-social__facebook
        %p Facebookでログイン
      .login-social__google
        %p Googleでログイン
    .login-email
      .login-email__address
        %textarea{:name => "mail-address", :placeholder => "メールアドレス", :rows => "1"}
      .login-email__password
        %textarea{:name => "password", :placeholder => "パスワード", :rows => "1"}
      .login-email__login
        %p ログイン
        %a.login-email__help{:href => "https://www.mercari.com/jp/password/reset/start/"} パスワードをお忘れの方
= render "login-footer"
