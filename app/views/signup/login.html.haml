.header
  .header__image
    .header__image--mercari
      = image_tag('/logo.svg')
.main
  .login-new-account
    %p.login-new-account__text アカウントをお持ちでない方はこちら
    = link_to "新規会員登録", register_signup_index_path, class: "login-new-account__link"
  .login-social
    = link_to "Facebookでログイン", register_signup_index_path, class: "login-social__facebook"
    = link_to "Googleでログイン", register_signup_index_path, class: "login-social__google"
  .login-email
    .login-email__address
      %textarea.login-email__address--textarea{:name => "mail-address", :placeholder => "メールアドレス", :rows => "1"}
    .login-email__password
      %textarea.login-email__password--textarea{:name => "password", :placeholder => "パスワード", :rows => "1"}
    .login-email__login
      %button{class: "login-email__login--submit", :type => "submit"} ログイン
    %a.login-email__help{:href => "https://www.mercari.com/jp/password/reset/start/"} パスワードをお忘れの方
= render "login-footer"
