.header
  .header__image--mercari
    = image_tag('/logo.svg')
  %ol.progress-bar
    %li.is-active
      %span 会員情報
    %li.is-active
      %span 電話番号認証
    %li.is-active
      %span  お届け先住所入力
    %li
      %span 支払い方法
    %li
      %span 完了

.step3-main
  .register-text 住所入力
  .register-address
    .register-address__name
      %label.register-address__name--label お名前(全角)
      %span.register-required 必須
    .register-address__nameform
      %textarea.register-address__nameform--textarea{:name => "familyname", :placeholder => "例)山田", :rows => "1"}
      %textarea.register-address__nameform--textarea{:name => "givenname", :placeholder => "例)彩", :rows => "1"}
    .register-address__namekana
      %label.register-address__namekana--label  お名前かな(全角)
      %span.register-required 必須
    .register-address__kana-nameform
      %textarea.register-profile__kana-nameform--textarea{cols:"20",:name => "familyname_kana", :placeholder => "例)ヤマダ", :rows => "1"}
      %textarea.register-profile__kana-nameform--textarea{cols:"20",:name => "givenname_kana", :placeholder => "例)アヤ", :rows => "1"} 
    .register-address__postalcode
      %label.register-address__postalcode--label 郵便番号
      %span.register-required 必須
      %textarea.register-address__postalcode--textarea{cols:"20",:name => "familyname_kana", :placeholder => "123-4567", :rows => "1"}
    .register-address__prefecture
      %label.register-address__prefecture--label 都道府県
      %span.register-required 必須
      %select.egister-address__prefecture--select{name:"prefecture"}
    .register-address__city
      %label.register-address__city--label 市町村
      %span.register-required 必須
      %textarea.register-address__city--textarea{cols:"20",:name => "city", :placeholder => "例)横浜市緑区", :rows => "1"}
    .register-address__block
      %label.register-address__block--label 番地
      %span.register-required 必須
      %textarea.register-address__block--textarea{cols:"20",:name => "block", :placeholder => "例)青山1-1-1", :rows => "1"}    
    .register-address__building
      %label.register-address__building--label 建物名
      %span.register-any 任意
      %textarea.register-address__building--textarea{cols:"20",:name => "building", :placeholder => "例)柳ビル103", :rows => "1"}      
    .register-address__phone-number
      %label.register-address__phone-number--label 電話
      %span.register-any 任意
      %textarea.register-address__phone-number--textarea{cols:"20",:name => "phone_number", :placeholder => "例)柳ビル103", :rows => "1"}    
    = link_to "次へ進む", step4_signup_index_path, class: "register-profile__nextpage"
= render "login-footer"
